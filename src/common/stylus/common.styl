header{
    width: 96%;
    padding: 0 2%;
    height: 70px;
    background: #032034;
}

.title{
    font-size: 30px;
    color: #fff;
    line-height: 70px;
}

.head_tab{
    float: right;
    height: 70px;
    display: flex;
    justify-content: space-between;
    width: 638px;
    margin-right: 114px;
}

.head_tab li{
    color: #fff;
    font-size: 18px;
    list-style: none;
    padding: 0 26px;
    line-height: 107px;
    cursor: pointer;
    position: relative;
    border-top: 3px solid transparent;
}

.head_tab li img{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-100%);
}

.head_tab .active{
    background: #0e4a74;
    border-top-color: #2a7be2;
}

.content{
    width: 96%;
    padding: 0 2% 2%;
    margin-top: 13px;
    flex: 1;
    display: flex;
}

.content .detail_msg{
    flex: 1;
    display: flex;
    flex-direction: column;
}

.project_information{
    width: 318px;
    margin-right: 20px;
    display: flex;
    flex-direction: column;
}

.project_information .project_information_title{
	position: relative;
    height: 44px;
    border: 1px solid #fff;
    background-color: rgba(86,86,86,0.18);
    border-radius: 4px;
    margin-bottom: 16px;
    line-height: 44px;
    padding-left: 20px;
}

.project_information .project_information_title span{
    vertical-align: 3px;
}
.project_information .project_information_title .add_btn{
    position: absolute;
    right: 10px;
    color: white;
    font-size: 16px;
}
.project_information .project_information_content{
    flex: 1;
    border: 1px solid #fff;
    background-color: rgba(0,0,0,0.18);
    border-radius: 4px;
    display: flex;
    flex-direction: column;
}

.project_information .project_information_content .search{
    height: 32px;
    padding: 10px;
    position: relative;
}

.project_information .project_information_content .search input{
    border: none;
    width: 100%;
    height: 100%;
    border-radius: 4px;
    background-color: rgba(51,69,90,0.8);
    color: rgba(255,255,255,0.5);
    text-indent: 36px;
    outline: none;
}

.project_information .project_information_content .search img{
    position: absolute;
    left: 19px;
    top: 17px;
}

.project_information .project_information_content .search input::-webkit-input-placeholder{
    color: rgba(255,255,255,0.5);   
}

.project_information_name{
    flex: 1;
    overflow:auto;
}

.project_information_name .el-menu{
    border-right: none;
    background: transparent;
}


.project_information_name .el-menu .el-submenu .el-submenu__title{
    color: #fff;
    font-size: 16px;
    height: 38px;
    line-height: 38px;
    border-left: 3px solid #2a7be2;
    background: rgba(14,74,116,0.6);
}

.project_information_name .el-menu .el-submenu .el-submenu__title:hover{
    background-color: transparent; 
}

.project_information_name .el-menu .el-submenu .el-submenu__title i{
    color: #fff;
}

.project_information_name .el-menu .el-menu--inline .el-menu-item{
    color: #fff;
}

.project_information_name .el-menu .el-menu--inline .el-menu-item{
    background: transparent;
}

.project_information_name .el-menu .el-submenu .el-menu .is-active{
    color: #2a7be2;
}

.project_information_name .el-menu .el-menu--inline .el-menu-item:hover{
    background: transparent;
    color: #2a7be2;
}

.detail_msg .project_title{
    height: 44px;
    border: 1px solid #fff;
    background-color: rgba(86,86,86,0.18);
    border-radius: 4px;
    margin-bottom: 16px;
    line-height: 44px;
    padding-left: 20px;
}

.detail_msg .project_title span{
    vertical-align: 3px;
}

.detail_msg .project_title i{
    float: right;
    font-style: normal;
    margin-right: 20px;
}

.detail_msg .project_title i b{
    font-size: 30px;
    color: #ffbe32;
    vertical-align: -6px;
}

.detail_msg .project_content{
    border: 1px solid #fff;
    background-color: rgba(0,0,0,0.18);
    border-radius: 4px;
    flex: 1;
}